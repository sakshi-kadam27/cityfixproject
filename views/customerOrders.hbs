<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Bookings</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 40px;
    }

    h2 {
      text-align: center;
      color: #0d47a1;
      margin-bottom: 30px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background-color: white;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    th, td {
      padding: 12px 16px;
      text-align: left;
      border-bottom: 1px solid #eee;
    }

    th {
      background-color: #0d47a1;
      color: white;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    .status {
      text-transform: capitalize;
      font-weight: bold;
    }

    .status.pending {
      color: orange;
    }

    .status.accepted {
      color: green;
    }

    .status.rejected {
      color: red;
    }

    .message {
      text-align: center;
      margin-top: 20px;
      font-size: 1.2rem;
      color: #333;
    }
  </style>
</head>
<body>

  <h2>Your Bookings</h2>

  <div class="message" id="message">Loading...</div>

  <table id="bookings-table" style="display:none;">
    <thead>
      <tr>
        <th>Service</th>
        <th>Date</th>
        <th>Time</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody id="bookings-body">
      <!-- Bookings will be injected here -->
    </tbody>
  </table>

  <script>
    async function fetchBookings() {
      try {
        const response = await fetch("http://localhost:5000/auth/getCustomerOrders");
        const data = await response.json();

        const message = document.getElementById("message");
        const table = document.getElementById("bookings-table");
        const tbody = document.getElementById("bookings-body");

        if (!data.success || !data.orders.length) {
          message.textContent = "No bookings found.";
          return;
        }

        // Hide loading message
        message.style.display = "none";
        table.style.display = "table";

        data.orders.forEach(order => {
          const row = document.createElement("tr");

          row.innerHTML = `
            <td>${order.name_of_service}</td>
            <td>${order.date}</td>
            <td>${order.time}</td>
            <td><span class="status ${order.status}">${order.status}</span></td>
          `;

          tbody.appendChild(row);
        });
      } catch (error) {
        console.error("Error fetching bookings:", error);
        document.getElementById("message").textContent = "Failed to load bookings.";
      }
    }

    window.onload = fetchBookings;
  </script>

</body>
</html>
